<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_height="50.0dip" 
        android:layout_width="fill_parent" 
        android:paddingTop="8.0dip" 
        android:background="@drawable/set_all_bg"
        >
        
        <ImageButton 
            android:layout_height="30.0dip" 
            android:layout_width="30.0dip" 
            android:background="@drawable/back"
            android:layout_centerVertical="true" 
            android:layout_alignParentLeft="true" 
            android:layout_marginLeft="10.0dip"
            android:id="@+id/socketnewconfig_back"/>
        
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:id="@+id/socketconfig_name"
            android:textColor="#ff000000"
            android:textSize="17.0dip"
            android:text="@string/renwu_config_device"
            />
        
        <ProgressBar
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content" 
            style="?android:attr/progressBarStyleSmall" 
            android:layout_centerVertical="true" 
            android:layout_alignParentRight="true" 
            android:indeterminate="true" 
            android:layout_marginRight="20.0dip" 
            android:layout_marginTop="10.0dip" 
            android:layout_marginLeft="30.0dip" 
            android:visibility="gone" 
            android:id="@+id/socketnewconfig_refresjing"
             />
        
        <ImageButton 
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content" 
            android:background="@android:color/transparent"
            android:layout_centerVertical="true" 
            android:layout_alignParentRight="true" 
            android:id="@+id/socketnewconfig_refresh" 
            android:src="@drawable/refresh_btn_normal"
            android:visibility="gone"
            />
    </RelativeLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:padding="5.0dip"
        android:orientation="vertical"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView 
                android:layout_width="50.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5.0dip"
                android:text="@string/renwu_config_ssid"
                
                />
            
            <EditText 
                android:layout_width="30.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/socketnewconfig_edit_ssid"
                
                />
        </LinearLayout><LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView 
                android:layout_width="50.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5.0dip"
                android:text="@string/renwu_config_password"
                
                />
            
            <EditText 
                android:layout_width="30.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/socketnewconfig_edit_pass"
                android:password="true"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <CheckBox 
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:checked="false"
                style="@style/CustomCheckboxTheme"
                android:id="@+id/socketnewconfig_edit_showpass"
                />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/renwu_config_showpass"
                android:layout_marginLeft="10.0dip"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <TextView 
                android:layout_width="50.0dip"
                android:layout_height="wrap_content"
                android:text="配置进度"
                />
            <ProgressBar 
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="30.0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="20"
                />
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/startconfig"
                android:id="@+id/socketnewconfig_edit_config"
                />
        </RelativeLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <Button 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/renwu_config_config"
                android:id="@+id/socketdetail_search_config"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
