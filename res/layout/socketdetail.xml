<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffb5b2b5"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_height="50.0dip" 
        android:layout_width="fill_parent" 
        android:paddingTop="8.0dip" 
        android:background="@drawable/set_all_bg"
        >
        
        <ImageButton 
            android:layout_height="30.0dip" 
            android:layout_width="30.0dip" 
            android:background="@drawable/back" 
            android:layout_centerVertical="true" 
            android:layout_alignParentLeft="true" 
            android:layout_marginLeft="10.0dip"
            android:id="@+id/socketdetail_back"/>
        
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:id="@+id/socketdetail_name"
            android:textColor="#ff000000"
            android:textSize="17.0dip"
            />
        
        <ProgressBar
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content" 
            style="?android:attr/progressBarStyleSmall" 
            android:layout_centerVertical="true" 
            android:layout_alignParentRight="true" 
            android:indeterminate="true" 
            android:layout_marginRight="20.0dip" 
            android:layout_marginTop="10.0dip" 
            android:layout_marginLeft="30.0dip" 
            android:visibility="gone" 
            android:id="@+id/socketdetail_refresjing"
             />
        
        <ImageButton 
            android:layout_height="30.0dip" 
            android:layout_width="30.0dip" 
            android:layout_centerVertical="true" 
            android:layout_alignParentRight="true" 
            android:id="@+id/socketdetail_refresh" 
            android:layout_marginRight="10.0dip"
            android:background="@drawable/refresh_btn_normal"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:background="#ffb5b2b5"
        ></RelativeLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/info_setting_circle"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:orientation="vertical"
        android:layout_margin="10.0dip"
        >
		<RelativeLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent" 
	        android:layout_gravity="center"
	        
	        > 
	        
		    <ImageView 
		        android:layout_width="80.0dip"
		        android:layout_height="80.0dip"
		        android:layout_alignParentLeft="true"
		        android:layout_marginLeft="5.0dip"
		        android:id="@+id/socketdetial_img"
		        
		        />
		    
		    
		    <RelativeLayout 
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content" 
		        android:layout_gravity="center"
		        android:layout_toRightOf="@id/socketdetial_img"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="10.0dip"
	        > 
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        
		        android:id="@+id/socketdetail_tip"
		        android:layout_marginTop="8.0dip"
		        android:textColor="#ff555555"
		        android:text="11:30开"
		        />
		    
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/socketdetail_tip"
		        android:id="@+id/socketdetail_delayinfo"
		        android:textColor="#ff555555"
		        android:text="        "
		        />
		    </RelativeLayout>
		    <ImageView 
		        android:id="@+id/socketdetail_open"
		        android:layout_width="60.0dip"
		        android:layout_height="60.0dip"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="5.0dip"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true"
		        android:background="@drawable/on"
		        />
		    
	    </RelativeLayout>
	    <View android:background="#ffdedbde" android:layout_width="fill_parent" android:layout_height="1.0dip" />
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="10.0dip"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="10.0dip"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:text="@string/renwu_detial_delay"
	            />
	        <ImageView
	            android:id="@+id/socketdetail_delay"
		        android:layout_width="60.0dip"
		        android:layout_height="60.0dip"
		        android:layout_alignParentRight="true"
		        android:background="@drawable/delay"
		        android:layout_marginRight="2.0dip"
		        android:layout_centerHorizontal="true"
		        ></ImageView>
	    </RelativeLayout>
	    <View android:background="#ffdedbde" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="1.0dip" />
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:text="锁定"
	            android:layout_marginLeft="10.0dip"
	            />
	        <ImageView
		        android:layout_width="30.0dip"
		        android:layout_height="30.0dip"
		        android:layout_marginRight="5.0dip"
		        android:layout_alignParentRight="true"
		        android:background="@drawable/on"
		        ></ImageView>
	    </RelativeLayout>
    </LinearLayout>
    <RelativeLayout 
        android:layout_height="250.dip" 
        android:layout_width="fill_parent" 
        android:layout_weight="1"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="10.0dip"
        android:background="@drawable/info_setting_circle"> 
        
        <ListView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5.0dip"
            android:background="#ffffffff"
            android:id="@+id/socketdetail_task"
            android:scrollbars="vertical"
            >
            
        </ListView>
    </RelativeLayout>
</LinearLayout>
