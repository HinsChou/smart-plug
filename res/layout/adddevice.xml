<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/set_circle_bg"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/device_new_aphelp"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_ap_title"
            android:textSize="16sp" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/help_ap_one"
            android:textSize="14sp" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/help_ap_two"
            android:textSize="14sp" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/help_ap_three"
            android:textSize="14sp" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/help_ap_four"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/startconfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/set_in_circle_bg"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/yes"
        android:textSize="18sp"
        android:textColor="@color/white" />

</LinearLayout>