<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_height="50.0dip" 
        android:layout_width="fill_parent" 
        android:paddingTop="8.0dip" 
        android:background="@drawable/headbg"
        >
        
        <ImageButton 
            android:layout_height="30.0dip"
            android:layout_width="20.0dip"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/back2"
            android:layout_centerVertical="true" 
            android:layout_alignParentLeft="true" 
            android:id="@+id/socketnewtask_back"
            />
        
        
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:id="@+id/socketnewtask_name"
            android:textColor="@color/white"
            android:text="@string/timersetting"
            android:textSize="17.0dip"
            />
        
       
        
        <ImageButton 
            android:layout_height="30.0dip" 
            android:layout_width="30.0dip" 
            android:background="@drawable/setmenu"
            android:layout_centerVertical="true" 
            android:layout_alignParentRight="true" 
            android:layout_marginRight="10.0dip"
            android:id="@+id/socketnewtask_save" 
            android:visibility="gone"
            />
    </RelativeLayout>
    
     <LinearLayout android:orientation="vertical" 
         android:background="@drawable/info_setting_circle" 
         android:padding="1.0dip" 
         android:layout_width="fill_parent" 
         android:layout_height="wrap_content"
          android:layout_margin="5.0dip">
    
	    <RelativeLayout 
	        android:layout_height="wrap_content"
	        android:background="@drawable/timerhead"
	        android:layout_width="fill_parent">
	        
	        <TextView android:layout_width="wrap_content"
	            android:layout_height="20.0dip"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="5.0dip"
	            android:layout_centerVertical="true"  
	            android:text="@string/timertask" 
	            android:textColor="@color/white"   
	            />
	        
	        <!--  CheckBox android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="5.0dip"
	            android:id="@+id/socketnettask_isopen"
	            /-->
	    </RelativeLayout>
	    
	    <View android:background="#ffdedbde" android:layout_width="fill_parent" android:layout_height="1.0dip" />
	     
	    <RelativeLayout 
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5.0dip"
	        android:layout_width="fill_parent"
	        android:background="@drawable/more_bg"
            android:clickable="true"
            android:id="@+id/renwu_socket_task_rela_opentime"
        >
	        <TextView android:layout_width="wrap_content"
	            android:layout_height="40.0dip"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="5.0dip"
	            android:layout_centerVertical="true"  
	            android:id="@+id/socketnewtask_open"
	            android:text="@string/renwu_socket_task_opentime"
	            android:gravity="center"/>
	        
	        <TextView android:layout_width="60.0dip"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="40.0dip"
	            android:id="@+id/socketnewtask_starttime"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true" 
	            android:text="00:00"
	            />
	        
	        <CheckBox 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="5.0dip"
	            android:visibility="gone"
	            android:id="@+id/socketnettask_starttime_open"
	            />
	    </RelativeLayout>
	    
	    <View android:background="#ffdedbde" android:layout_width="fill_parent" android:layout_height="1.0dip" />
	    
	    <RelativeLayout 
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5.0dip"
	        android:layout_width="fill_parent"
	        android:background="@drawable/more_bg"
            android:clickable="true"
            android:id="@+id/renwu_socket_task_rela_closetime"
        >
	         <TextView android:layout_width="wrap_content"
	            android:layout_height="20.0dip"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="5.0dip"
	            android:layout_centerVertical="true"  
	            android:id="@+id/socketnewtask_close"
	            android:text="@string/renwu_socket_task_closetime"/>
	        
	        <TextView android:layout_width="wrap_content"
	            android:layout_height="40dp"
	            android:layout_marginRight="65.0dip"
	            android:gravity="center"
	            android:id="@+id/socketnewtask_endtime"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"  
	            android:text="00:00"
	            />
	        

	            />
	    </RelativeLayout>
	</LinearLayout>
	
    <LinearLayout 
         android:orientation="vertical" 
         android:background="@color/transprent" 
         android:padding="1.0dip" 
         android:layout_width="fill_parent" 
         android:layout_height="wrap_content"
         android:layout_margin="5.0dip">
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="5.0dip"
	        android:background="@color/transprent"
	        android:orientation="horizontal"
	        >
	    <TextView 
	    	android:id="@+id/repeat_days"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5.0dip"
	        android:layout_marginLeft="6.0dip"
	        android:layout_marginRight="6.0dip"
	        android:layout_marginBottom="5.0dip"
	        android:text="@string/repeat_circle"
	        
	        />
	    <TextView 
	        android:id="@+id/sel_days"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5.0dip"
	        android:layout_marginLeft="6.0dip"
	        android:layout_marginRight="6.0dip"
	        android:layout_marginBottom="5.0dip"
	        android:text=""
	        android:textColor="@android:color/black"
	        android:gravity="center"
	        />
	    </LinearLayout>
	    
       
	</LinearLayout>
	     

</LinearLayout>
