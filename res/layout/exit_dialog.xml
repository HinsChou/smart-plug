<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:background="@drawable/info_setting_circle"
    android:layout_marginLeft="20.0dip"
    android:layout_marginRight="20.0dip"
    
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/exitdialog_title"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:textSize="30.0dip"
        />
    <TextView
        android:id="@+id/exitdialog_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20.0dip"
        android:gravity="center"
        android:text="@string/renwu_exit"
        android:textColor="#FF000000" />

    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="#ffb5b2b5"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        >
        <Button 
            android:id="@+id/exitdialog_yes"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:layout_weight="1"
            android:background="@drawable/exit_button"
            android:paddingTop="10.0dip"
            android:paddingBottom="10.0dip"
            />
        <TextView 
            android:layout_width="1.0dip"
            android:layout_height="wrap_content"
            android:text=""
            android:background="#ffb5b2b5"
            android:paddingTop="0.0dip"
            android:paddingBottom="0.0dip"
            />
        <Button 
            android:id="@+id/exitdialog_no"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/exit_button"
			android:paddingTop="10.0dip"
            android:paddingBottom="10.0dip"
            android:text="@string/no"/>
    </LinearLayout>

</LinearLayout>
